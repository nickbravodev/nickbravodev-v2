---
import type { GetStaticPaths } from "astro";
import { getCollection } from "astro:content";
import MainLayout from "../../layouts/MainLayout.astro";
import WorkList from "../../components/WorkList.astro";

const works = await getCollection("works");

export const getStaticPaths = (async ({paginate}) => {
  const landing = (await getCollection('works', ({ data }) => {
  return data.isDraft !== (true);
})).sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
  // const categoryData = await getEntry('categories', landing.data.categories.id);
  return paginate(landing, {pageSize: 9});
}) satisfies GetStaticPaths;

const { page } = Astro.props;
---

<MainLayout
  title="Work - Astropost"
  description="We build privacy-focused websites, visual identities, and digital assets to solidify brand authority and trust across platforms. All while protecting your users' privacy."
  og_image="https://astropost.io/images/opengraph.png"
  og_url="https://astropost.io/work/"
>

<section>
    <WorkList works={works} />
</section>

</MainLayout>