---
const { title, title_tag, description, og_image } = Astro.props;
---

  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <!-- Static Site Generation with Astro https://astro.build -->
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="canonical" href={Astro.url} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="description" content={description} />
    <meta name="color-scheme" content="dark light" />
    
    <meta property="og:title" content={`${title} - ${title_tag}`} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={`${Astro.url.origin}${og_image}`} />
    <meta property="og:url" content={Astro.url} />

    <meta name="twitter:card" content="summary_large_image"/>
    <meta name="twitter:site" content="@maverik"/>
    <meta name="twitter:title" content={`${title} - ${title_tag}`}/>
    <meta name="twitter:description" content={description}/>
    <meta name="twitter:image" content={`${Astro.url.origin}${og_image}`}/>
  </head>
