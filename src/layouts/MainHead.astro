---
const { title, description, og_image } = Astro.props;
const siteUrl = "https://nickbravo.dev"
---

  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="canonical" href={`${siteUrl}${Astro.url.pathname}`} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta name="color-scheme" content="dark light" />
    <meta property="og:type" content="website" />
    <meta property="og:image" content={`${siteUrl}${og_image}`} />
    <meta property="og:url" content={`${siteUrl}${Astro.url.pathname}`} />
  </head>
