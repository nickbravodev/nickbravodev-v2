---
// Library imports
import { Icon } from 'astro-icon';

interface Props {
    text: string;
    href: string;
    target?: string;
    size?: "sm" | "lg";
    type?: "outline";
    color?: "secondary";
    icon?: {
        name: string;
        side: "left" | "right";
    }
    classes?: string;
}

const {
    text,
    href,
    target,
    size,
    type,
    color,
    icon,
    classes,
    ...rest
} = Astro.props as Props;
---

<a href={href}
target={target}
tabindex="0"
aria-label={text}
aria-roledescription={text}
role="button"
class:list={[
    "button",
    classes,
    size,
    type,
    color,
]}
{...rest}>{
  icon && icon.side === "left" && (
    <Icon name={icon.name} height="22" width="22" class="me-2" />
  )
} <span>{text}</span> {
  icon && icon.side === "right" && (
    <Icon name={icon.name} height="22" width="22" class="ms-2" />
  )
}</a>
