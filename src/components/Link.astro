---
// Library imports
import { Icon } from 'astro-icon';

interface Props {
  text: string;
  href: string;
  target?: string;
  style?: string;
  icon?: string;
  classes?: string;
}

const {
  text,
  href,
  target,
  style,
  icon,
  classes,
  ...rest
} = Astro.props as Props;
---

          <li>
            <a href={href} 
              target={target} 
              class:list={[ classes, style ]} 
              {...rest}>{
              icon && icon.side === "left" && (
                <Icon name={icon.name} height="24" width="24" />
              )
            }<span>{text}</span>{
              icon && icon.side === "right" && (
                <Icon name={icon.name} height="24" width="24" />
              )
            }
            </a>
          </li>